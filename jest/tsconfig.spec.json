{
  "compilerOptions": {
    "outDir": "../out-tsc/spec",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "target": "es2018",
    "module": "commonjs",
    "lib": [
      "es2018"
    ],
    "types": [
      "jest",
      "jest-extended",
      "jquery",
      "node"
    ]
  },
  "include": [
    "**/*.spec.ts",
    "**/*.test.js",
    "**/*.test.ts",
    "**/__mocks__/**/*.*",
    "src/typings/**/*.ts",
    "**/*.d.ts"
  ]
}
