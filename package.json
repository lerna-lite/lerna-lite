{
  "name": "lerna-lite",
  "author": "Ghislain B.",
  "license": "MIT",
  "private": true,
  "scripts": {
    "clean": "rimraf --maxBusyTries=10 packages/*/dist dist",
    "lint": "eslint packages --ext .ts",
    "prebuild": "pnpm run clean",
    "build": "pnpm -r --stream run build",
    "postbuild": "pnpm run lint",
    "dist-info-cmd": "node ./packages/cli/dist/cli.js info",
    "dist-init-cmd": "node ./packages/cli/dist/cli.js init --independent --exact --use-workspaces",
    "dist-roll-version": "node ./packages/cli/dist/cli.js version",
    "dist-roll-publish": "node ./packages/cli/dist/cli.js publish from-package",
    "dist-roll-version-dry-run": "node ./packages/cli/dist/cli.js version --git-dry-run",
    "dist-roll-publish-dry-run": "node ./packages/cli/dist/cli.js publish from-package --git-dry-run",
    "dist-exec-win": "node ./packages/cli/dist/cli.js exec --scope {@lerna-lite/cli,@lerna-lite/core} -- echo hello from package: %LERNA_PACKAGE_NAME%",
    "dist-exec-unix": "node ./packages/cli/dist/cli.js exec -- echo hello from package: ${LERNA_PACKAGE_NAME}",
    "dist-pack-tarball": "node ./packages/cli/dist/cli.js run pack-tarball",
    "new-version": "lerna version",
    "new-publish": "lerna publish from-package",
    "pack-tarball": "lerna run pack-tarball",
    "jest": "jest --runInBand --coverage=true --config ./jest/jest.config.js",
    "jest:ci": "jest --maxWorkers=2 --coverage=true --ci --config ./jest/jest.config.js",
    "jest:watch": "jest --watch --coverage=false --config ./jest/jest.config.js"
  },
  "homepage": "https://github.com/ghiscoding/lerna-lite",
  "repository": {
    "type": "git",
    "url": "https://github.com/ghiscoding/lerna-lite.git"
  },
  "bugs": {
    "url": "https://github.com/ghiscoding/lerna-lite/issues"
  },
  "engines": {
    "node": ">=14.15.0",
    "npm": ">=8.0.0",
    "pnpm": "7"
  },
  "devDependencies": {
    "@lerna-lite/cli": "workspace:*",
    "@lerna-lite/core": "workspace:*",
    "@lerna-lite/exec": "workspace:*",
    "@lerna-lite/info": "workspace:*",
    "@lerna-lite/list": "workspace:*",
    "@lerna-lite/optional-cmd-common": "workspace:*",
    "@lerna-lite/publish": "workspace:*",
    "@lerna-lite/run": "workspace:*",
    "@lerna-lite/version": "workspace:*",
    "@lerna-test/clone-fixture": "link:helpers/clone-fixture",
    "@lerna-test/command-runner": "link:helpers/command-runner",
    "@lerna-test/commit-change-to-package": "link:helpers/commit-change-to-package",
    "@lerna-test/copy-fixture": "link:helpers/copy-fixture",
    "@lerna-test/find-fixture": "link:helpers/find-fixture",
    "@lerna-test/get-commit-message": "link:helpers/get-commit-message",
    "@lerna-test/git-add": "link:helpers/git-add",
    "@lerna-test/git-checkout": "link:helpers/git-checkout",
    "@lerna-test/git-commit": "link:helpers/git-commit",
    "@lerna-test/git-init": "link:helpers/git-init",
    "@lerna-test/git-merge": "link:helpers/git-merge",
    "@lerna-test/git-status": "link:helpers/git-status",
    "@lerna-test/git-tag": "link:helpers/git-tag",
    "@lerna-test/init-fixture": "link:helpers/init-fixture",
    "@lerna-test/logging-output": "link:helpers/logging-output",
    "@lerna-test/multi-line-trim-right": "link:helpers/multi-line-trim-right",
    "@lerna-test/normalize-relative-dir": "link:helpers/normalize-relative-dir",
    "@lerna-test/serialize-changelog": "link:helpers/serialize-changelog",
    "@lerna-test/serialize-git-sha": "link:helpers/serialize-git-sha",
    "@lerna-test/serialize-tempdir": "link:helpers/serialize-tempdir",
    "@lerna-test/serialize-windows-paths": "link:helpers/serialize-windows-paths",
    "@lerna-test/set-npm-userconfig": "link:helpers/set-npm-userconfig",
    "@lerna-test/show-commit": "link:helpers/show-commit",
    "@lerna-test/silence-logging": "link:helpers/silence-logging",
    "@lerna-test/update-lerna-config": "link:helpers/update-lerna-config",
    "@types/jest": "^28.1.2",
    "@types/node": "^17.0.40",
    "@types/npmlog": "^4.1.4",
    "@types/yargs": "^17.0.10",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@typescript-eslint/parser": "^5.28.0",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "file-url": "^3.0.0",
    "jest": "^28.1.1",
    "jest-cli": "^28.1.1",
    "jest-extended": "^2.0.0",
    "normalize-newline": "^3.0.0",
    "normalize-path": "^3.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "nx": "14.3.6",
    "rimraf": "^3.0.2",
    "tacks": "^1.2.6",
    "tempy": "^1.0.1",
    "ts-jest": "^28.0.5",
    "tsm": "^2.2.1",
    "typescript": "^4.7.4"
  }
}
