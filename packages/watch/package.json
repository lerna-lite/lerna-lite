{
  "name": "@lerna-lite/watch",
  "version": "4.11.2",
  "description": "Lerna-Lite watch commmand - Runs a command whenever packages or their dependents change",
  "homepage": "https://github.com/lerna-lite/lerna-lite",
  "bugs": {
    "url": "https://github.com/lerna-lite/lerna-lite/issues"
  },
  "license": "MIT",
  "author": "Ghislain B.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lerna-lite/lerna-lite.git",
    "directory": "packages/watch"
  },
  "files": [
    "/dist"
  ],
  "type": "module",
  "types": "./dist/index.d.ts",
  "exports": {
    "types": "./dist/index.d.ts",
    "import": "./dist/index.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "remove dist && tsgo",
    "build:incremental": "tsgo --incremental --sourceMap false --excludeDirectories dist",
    "echo:test": "echo \"Lerna-Lite watch package\"",
    "pack-tarball": "npm pack"
  },
  "dependencies": {
    "@lerna-lite/cli": "workspace:*",
    "@lerna-lite/core": "workspace:*",
    "chokidar": "^4.0.3",
    "tinyglobby": "catalog:dependencies",
    "zeptomatch": "catalog:dependencies"
  },
  "devDependencies": {
    "@types/yargs-parser": "catalog:devDependencies",
    "mock-stdin": "^1.0.0",
    "yargs-parser": "catalog:devDependencies"
  },
  "engines": {
    "node": "^20.17.0 || >=22.9.0"
  }
}
