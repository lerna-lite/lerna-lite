{
  "extends": "../../tsconfig.base.json",
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "types": ["node"]
  },
  "exclude": [
    "dist",
    "node_modules",
    "**/__fixtures__/**",
    "**/*.spec.ts",
    "**/*.spec.mts",
    "**/__fixtures__/**",
    "**/__mocks__/**/*.*"
  ],
  "filesGlob": ["./src/**/*.ts"],
  "include": ["src/**/*.ts"],
  "references": [{ "path": "../cli" }, { "path": "../core" }]
}
