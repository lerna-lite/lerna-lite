{
  "name": "@lerna-lite/run",
  "version": "4.10.2",
  "description": "Lerna-Lite Run command will help to run npm script in each package workspace that contains that script",
  "homepage": "https://github.com/lerna-lite/lerna-lite",
  "bugs": {
    "url": "https://github.com/lerna-lite/lerna-lite/issues"
  },
  "license": "MIT",
  "author": "Ghislain B.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lerna-lite/lerna-lite.git",
    "directory": "packages/run"
  },
  "files": [
    "/dist"
  ],
  "type": "module",
  "types": "./dist/index.d.ts",
  "exports": {
    "types": "./dist/index.d.ts",
    "import": "./dist/index.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "remove dist && tsc",
    "build:incremental": "tsgo --incremental --sourceMap false --excludeDirectories dist",
    "echo:test": "echo \"Lerna-Lite run package\"",
    "pack-tarball": "npm pack"
  },
  "dependencies": {
    "@lerna-lite/cli": "workspace:*",
    "@lerna-lite/core": "workspace:*",
    "@lerna-lite/npmlog": "workspace:*",
    "@lerna-lite/profiler": "workspace:*",
    "fs-extra": "catalog:",
    "p-map": "catalog:",
    "tinyrainbow": "catalog:dependencies"
  },
  "devDependencies": {
    "@types/fs-extra": "catalog:devDependencies",
    "@types/yargs-parser": "catalog:devDependencies",
    "perf_hooks": "^0.0.1",
    "tinyglobby": "catalog:dependencies",
    "yargs": "catalog:dependencies",
    "yargs-parser": "catalog:devDependencies"
  },
  "engines": {
    "node": "^20.17.0 || >=22.9.0"
  }
}