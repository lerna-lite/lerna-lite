    "directory": "packages/filter-packages"
  },
  "bugs": {
    "url": "https://github.com/lerna-lite/lerna-lite/issues"
  },
  "engines": {
    "node": ">=16.15.0",
    "npm": ">=8.5.0"
  },
  "dependencies": {
    "@lerna-lite/core": "workspace:*",
    "multimatch": "^6.0.0",
    "npmlog": "^7.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.9.0",
    "yargs": "^17.7.2"
